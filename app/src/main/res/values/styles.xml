<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>


    <!-- Utility Styles -->
    <style name="HasShadow">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- Widget Styles -->
    <style name="Bone" parent="HasShadow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/bone_up</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ScoreBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@color/colorPrimaryLight</item>-->
    </style>
    <style name="ScoreButton" parent="HasShadow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@android:dimen/app_icon_size</item>
        <!--<item name="android:layout_margin">12dp</item>-->
        <item name="android:textSize">24sp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ScoreText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/error</item>
    </style>

    <style name="ActionButton">
        <item name="android:padding">18dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
